<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="120dp">

    <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

    <View android:id="@+id/thumbnailShadow"
          android:layout_width="match_parent" android:layout_height="60dp"
          android:layout_alignParentTop="true"
          android:visibility="gone"
          android:background="@drawable/shadow_top_to_bottom"/>

    <ImageView android:id="@+id/thumbnailCheck"
               android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:src="@drawable/ic_check"
               android:visibility="gone"
               android:layout_alignParentStart="true"
               android:layout_marginStart="@dimen/media_album_item_margin_bottom"
               android:layout_marginTop="@dimen/media_album_item_margin_start"
               android:tint="@color/md_white_1000"
               android:layout_alignParentTop="true"/>

</RelativeLayout>